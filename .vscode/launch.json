{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "main",
            "type": "python",
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
        },
        {
            "name": "client",
            "type": "python",
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "request": "launch",
            "program": "${workspaceFolder}/client_server/client.py",
        },
        {
            "name": "server",
            "type": "python",
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "request": "launch",
            "program": "${workspaceFolder}/client_server/server.py",
        }
    ],
    "compounds": [
        {
            "name": "Test Client Server",
            "configurations": ["client", "server"],
            "stopAll": true
        }
    ]
}