{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Python black all",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "black",
                "--line-length=80",
                "--skip-string-normalization",
                "src"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Python isort all",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "isort",
                "--profile=black",
                "--line-length=100",
                "."
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}